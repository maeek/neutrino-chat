{
  "parser": "@typescript-eslint/parser",
  "extends": ["react-app", "eslint:recommended"],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "legacyDecorators": true,
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "17"
    }
  },
  "globals": {
    "__DEV__": "readonly",
    "__PROD__": "readonly"
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-console": [
      0,
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "indent": ["error", 2],
    "guard-for-in": 0,
    "no-param-reassign": 0,
    "react/require-default-props": 0,
    "jsx-quotes": 0,
    "react/prop-types": 0,
    "react/jsx-handler-names": 0,
    "react/jsx-fragments": 0,
    "react/no-unused-prop-types": 0,
    "react/react-in-jsx-scope": 0,
    "import/export": 0,
    "prettier/prettier": 0,
    "no-unused-vars": 1,
    "no-case-declarations": 1,
    "eol-last": ["error", "always"],
    "array-bracket-spacing": "warn",
    "no-duplicate-imports": "error",
    "no-useless-return": "warn"
  }
}
